<% if @article.errors.any? %>
  <div class='row'>
    <div class="col-2">
    </div>
    <div class="col-6">
      <div class='card text-danger bg-white mb-3'>
        <div class='card-header'>
          <h2 class='card-title'>
            <%= pluralize(@article.errors.count, "error")%>
            prohibited this article from being saved:
          </h2>
          <div class='card-body'>
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
                <li><%=msg%></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f|%>
  <div class="form-group row">
    <div  class="col-sm-2 col-form-label"><%=f.label :title%></div>
    <div  class="col-sm-6 "><%=f.text_field :title, class: "form-control", placeholder:"Title of article", autofocus: true%></div>
  </div>
  <div class="form-group row">
    <div  class="col-sm-2 col-form-label"><%=f.label :description%></div>
    <div  class="col-sm-6 "><%=f.text_area :description, rows: 10, class: "form-control", placeholder:"Article description" %></div>
  </div>
  <div class="form-group row">
    <div  class="col-sm-2 col-form-label"><%=f.label :author%></div>
    <div  class="col-sm-6"><%=f.text_field :author, class: "form-control", placeholder:"Author of article" %></div>
  </div>
  <div class="form-group row">
    <div  class="col-sm-2 col-form-label"></div>
    <div class="col-sm-6">
      <%=f.submit class: 'btn btn-primary btn-md'%>
      &nbsp;
      <%=link_to "Cancel", articles_path%>
    </div>
  </div>
<%end%>
